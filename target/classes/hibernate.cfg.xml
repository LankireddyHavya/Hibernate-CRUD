<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/jfsdexam</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin</property>

        <!-- Update schema automatically -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- SQL output to console -->
        <property name="hibernate.show_sql">true</property>

        <!-- Mapping your entity classes -->
        <mapping class="com.klef.jfsd.exam.Device"/>
        <mapping class="com.klef.jfsd.exam.Smartphone"/>
        <mapping class="com.klef.jfsd.exam.Tablet"/>
    </session-factory>
</hibernate-configuration>
